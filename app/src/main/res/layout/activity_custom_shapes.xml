<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Learning.Custom_shapes_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_solid_bg"
        android:text="Solid Bg"
        android:textSize="40dp"
        android:textcolor="#000" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_bg"
        android:text="Gradient Bg"
        android:textSize="40dp"
        android:textcolor="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_outline"
        android:text="Outline "
        android:padding="10dp"
        android:textSize="40dp"
        android:textcolor="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_outline_dashed"
        android:text="Dashed Outline "
        android:padding="20dp"
        android:textSize="40dp"
        android:textcolor="#000" />



</LinearLayout>