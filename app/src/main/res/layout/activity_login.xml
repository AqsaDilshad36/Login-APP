<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".loginActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi,Welcome Back!"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello again, you’ve been missed!"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textColor="#999EA1"
            android:paddingTop="5dp"/>


         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Email"
             android:layout_marginleft=""
             android:paddingTop="40dp"
             android:textStyle="bold"
             android:textColor="#4E0189"
             android:textSize="14dp"/>

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="sophat.leat@nintrea.live"
           android:drawableLeft="@drawable/baseline_email_24"
           android:drawableTint="#A9A9A9"
           android:drawablePadding="8dp"
           android:textSize="15dp"
           android:layout_marginleft="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#4E0189"
        android:paddingTop="30dp"
        android:textStyle="bold"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="please enter your password"
        android:drawableRight="@drawable/eye"
        android:drawableStart="@drawable/lock"
        android:drawableTint="#A9A9A9"
        android:drawablePadding="8dp"
        android:textSize="15dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:paddingTop="20dp"
        android:textColor="#000C14"
        android:layout_marginLeft="40dp"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/forgotbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textStyle="normal"
        android:textColor="#FB344F"
        android:paddingLeft="50dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:paddingStart="90dp"
        android:paddingEnd="90dp"
        android:hint="Login"
        android:textColor="#700B0B"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don’t have an account ? "
        android:textColor="#999EA1"
        android:textSize="14dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#4E0189"
            android:textSize="14dp"
            android:paddingLeft="3dp"/>

    </LinearLayout>


</LinearLayout>