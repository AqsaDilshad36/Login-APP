<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotPasswordActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?!"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No worries, we’ll send you reset instructions"
        android:paddingHorizontal="40dp"
        android:textStyle="bold"
        android:textColor="#B1B1B1"
        android:textSize="14dp"
        android:paddingTop="5dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your Email"
        android:layout_marginHorizontal="40dp"
        android:paddingTop="60dp"
        android:textStyle="bold"
        android:textColor="#4E0189"
        android:textSize="12dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="sophat.leat@nintrea.live"
        android:layout_marginHorizontal="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We can’t seem to find the right email address for you resend the email that you have registered"
        android:paddingHorizontal="40dp"
        android:textStyle="bold"
        android:textColor="#B1B1B1"
        android:textSize="14dp"
        android:paddingTop="5dp"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:paddingStart="90dp"
        android:paddingEnd="90dp"
        android:hint="Reset Password"
        android:textColor="#FFFFFF"/>


    


</LinearLayout>